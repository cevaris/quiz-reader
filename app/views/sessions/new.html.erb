
<h1 class="center"><%= 'Sign In' %></h1>

<div class="row">
  <div class="span6">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :name, 'Name' %>
      <%= f.text_field :name %>

      <%= f.label :password, 'Password' %>
      <%= f.password_field :password %>

      <%= f.submit 'Sign in', class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

</div>